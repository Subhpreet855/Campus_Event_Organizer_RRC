generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  events      Event[]
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  date        DateTime
  location    String
  description String

  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model FeaturedEvent {
  id          Int      @id @default(autoincrement())
  name        String
  date        String
  time        String
  location    String
  description String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
